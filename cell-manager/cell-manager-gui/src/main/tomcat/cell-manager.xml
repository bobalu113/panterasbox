<!-- The contents of this file will be loaded for each web application -->
<Context docBase="D:\work\cell-manager\cell-manager-gui\target\wsgc-cell-manager-gui-1.0-SNAPSHOT.war" reloadable="true" unpackWAR="false">

    <!-- Default set of monitored resources -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <Environment name="AppSpecLocation" value="file:D:\work\cell-manager\cell-manager-gui\src\main\tomcat\app-specification.properties"
         type="java.lang.String" override="false"/>
    <Environment name="LdapUrl" value=""
         type="java.lang.String" override="false"/>

    <Environment name="LdapManagerPassword" value=""
         type="java.lang.String" override="false"/>

    <Environment name="LdapManagerDn" value=""
         type="java.lang.String" override="false"/>

    <Resource name="jdbc/EcomDB" auth="Container" type="javax.sql.DataSource"
        driverClassName="oracle.jdbc.OracleDriver" url=""
        username="" password="" maxActive="2" maxIdle="2" maxWait="-1"/>

    <Resource name="jdbc/SecurityDB" auth="Container" type="javax.sql.DataSource"
        driverClassName="oracle.jdbc.OracleDriver" url=""
        username="" password="" maxActive="2" maxIdle="2" maxWait="-1"/>

</Context>

